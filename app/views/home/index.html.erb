<div class="container mt-5">
  <div class="row">
    <% @widgets.each do |widget| %>
      <div class="col-md-3">
        <div class="card mb-3 box-shadow">
          <img class="card-img-top" alt="Thumbnail [100%x225]" src="<%= widget.user.images.small_url %>" data-holder-rendered="true">
          <div class="card-body">
            <h5 class="card-title">
              <%= widget.name %>
            </h5>

            <p class="card-text"><%= widget.description %></p>
            <!--
            <% if widget.visible? %>
              <span class="badge badge-primary">visible</span>
            <% else %>
              <span class="badge badge-secondary">hidden</span>
            <% end %>
            -->
            <% if widget.owner %>
              <span class="badge badge-success">owner</span>
            <% end %>

            <div class="mt-3 d-flex justify-content-between align-items-center">
              <div class="btn-group">
                <button type="button" class="btn btn-sm btn-outline-secondary">View</button>
                <button type="button" class="btn btn-sm btn-outline-secondary">Edit</button>
              </div>
              <small class="text-muted"><%= link_to widget.user.name, widget_path(widget.id) %></small>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
